{
  "name": "vavilon",
  "version": "1.2.0-7",
  "description": "A quick, lightweight and easy-to-use i18n engine for static websites",
  "license": "MIT",
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "l10n",
    "localization",
    "browser",
    "library"
  ],
  "homepage": "https://vavilon.js.org/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vavilon-js/vavilon.js.git"
  },
  "bugs": {
    "url": "https://github.com/vavilon-js/vavilon.js/issues"
  },
  "author": {
    "name": "Nikita Karamov",
    "email": "nick@karamoff.dev",
    "url": "https://karamoff.dev"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/vavilon.umd.js",
  "unpkg": "./dist/vavilon.iife.js",
  "jsdelivr": "./dist/vavilon.iife.js",
  "module": "./dist/vavilon.es.js",
  "exports": {
    ".": {
      "import": "./dist/vavilon.es.js",
      "require": "./dist/vavilon.umd.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite ./test/demo/",
    "lint": "prettier --check . && eslint .",
    "size": "size-limit",
    "test": "pnpm run lint",
    "postversion": "pnpm run build"
  },
  "devDependencies": {
    "@rollup/plugin-strip": "^2.0.0",
    "@size-limit/file": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cross-env": "^7.0.2",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "rollup": "^2.28.2",
    "rollup-plugin-dev": "^1.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "simple-git-hooks": "^2.7.0",
    "size-limit": "^4.6.0",
    "ts-transformer-minify-privates": "^0.3.0",
    "typescript": "^4.5.5",
    "vite": "^2.8.3"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*": [
      "prettier --ignore-unknown --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "size-limit": [
    {
      "limit": "1024 B",
      "path": "./dist/vavilon.es.js"
    }
  ]
}
