{
  "name": "vavilon",
  "version": "1.2.0-7",
  "description": "A quick, lightweight and easy-to-use i18n engine for static websites",
  "license": "MIT",
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "l10n",
    "localization",
    "browser",
    "library"
  ],
  "homepage": "https://kytta.codeberg.page/vavilon/",
  "repository": {
    "type": "git",
    "url": "git+https://codeberg.org/kytta/vavilon.git"
  },
  "bugs": {
    "url": "https://codeberg.org/kytta/vavilon/issues"
  },
  "author": {
    "name": "Nikita Karamov",
    "email": "me@kytta.dev",
    "url": "https://www.kytta.dev/"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/vavilon.umd.js",
  "unpkg": "./dist/vavilon.iife.js",
  "jsdelivr": "./dist/vavilon.iife.js",
  "module": "./dist/vavilon.es.js",
  "exports": {
    ".": {
      "import": "./dist/vavilon.es.js",
      "require": "./dist/vavilon.umd.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "lint": "pnpm run /^lint:/",
    "lint:format": "prettier --check .",
    "lint:eslint": "eslint --ext .ts src",
    "lint:tsc": "tsc --noEmit",
    "size": "size-limit",
    "test": "pnpm run lint && pnpm run build && pnpm run size",
    "postversion": "pnpm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2",
    "size-limit": "^8.2.6",
    "terser": "^5.19.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  },
  "browserslist": "supports es5, supports use-strict",
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ],
    "src/*.ts": [
      "eslint --fix",
      "tsc --noEmit"
    ]
  },
  "size-limit": [
    {
      "limit": "1024 B",
      "path": "./dist/vavilon.mjs"
    }
  ]
}
